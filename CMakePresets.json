{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
  "configurePresets": [
    {
      "name": "defaults",
      "hidden": true,
      "binaryDir": "${sourceDir}/.out/${presetName}",
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": "C:/dev/installed",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/.out/${presetName}/bin",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/.out/${presetName}/bin"
      }
    },
    {
      "name": "ninja_vcpkg_debug_Windows",
      "displayName": "ninja_vcpkg_debug_Windows",
      "inherits": "defaults",
      "generator": "Ninja",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "ninja_vcpkg_release_Windows",
      "displayName": "ninja_vcpkg_release_Windows",
      "inherits": "defaults",
      "generator": "Ninja",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "ninja_vcpkg_debug_Linux",
      "displayName": "ninja_vcpkg_debug_Linux",
      "inherits": "defaults",
      "generator": "Ninja",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ]
}